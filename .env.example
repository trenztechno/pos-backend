# ============================================
# POS System - Complete .env Configuration
# ============================================
# Copy this file to .env and update with your values
# cp .env.example .env

# ============================================
# Django Core Settings
# ============================================

# Secret Key - Generate a new one for production!
# Run: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=django-insecure-change-me-in-production-generate-new-key

# Debug Mode (True for development, False for production)
DEBUG=True

# Allowed Hosts (comma-separated)
# For development: localhost,127.0.0.1,*
# For production: your-domain.com,www.your-domain.com
ALLOWED_HOSTS=localhost,127.0.0.1,*

# ============================================
# Database Configuration (PostgreSQL)
# ============================================

DB_NAME=pos_db
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# ============================================
# AWS S3 Storage Configuration (Optional)
# ============================================
# Set USE_S3=True to enable S3 storage for images
# Set USE_S3=False to use local filesystem storage (default)

# Enable/Disable S3 Storage
USE_S3=False

# AWS Credentials (Required if USE_S3=True)
# Get these from AWS IAM Console: https://console.aws.amazon.com/iam/
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_STORAGE_BUCKET_NAME=your-s3-bucket-name
AWS_S3_REGION_NAME=us-east-1

# Pre-signed URLs (Recommended for Security)
# Set to True to use secure pre-signed URLs instead of public bucket access
# Pre-signed URLs expire after S3_PRESIGNED_URL_EXPIRATION seconds
USE_S3_PRESIGNED_URLS=True
S3_PRESIGNED_URL_EXPIRATION=3600

# ============================================
# Email Configuration (Optional - for password reset)
# ============================================
# Uncomment and configure if you need email functionality

# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password
# DEFAULT_FROM_EMAIL=your-email@gmail.com

# ============================================
# Notes
# ============================================
# 1. Never commit .env file to git (it's in .gitignore)
# 2. For production, set DEBUG=False and use a strong SECRET_KEY
# 3. For S3, create bucket and IAM user with S3FullAccess policy
# 4. Pre-signed URLs are more secure than public bucket access
# 5. All features work with local storage (USE_S3=False) - S3 is optional
